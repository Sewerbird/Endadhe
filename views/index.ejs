<html>
	<head>
		<title><%= title %></title>
		<link rel='stylesheet' href='/stylesheets/style.css' />
	</head>
	<body>
		<h3>Endadhe - Sneaky Necromancer Redux</h3>
		<canvas id="canvas" width="800" height="500" tabindex="1"/>
		<script type="text/javascript" src="/js/lib/rhill-voronoi-core.js"></script>
		<script type="text/javascript" src="/js/lib/lodash.js"></script>
		<script type="text/javascript" src="/js/client.js"></script>
		<script type="text/javascript" src="/js/lib/jquery-1.11.0.min.js"></script>
		<script type="text/javascript">
			//Instantiate Game
			var game = new Game();
			var gameView = new GameView(canvas, game);
			//Handle browser input
			document.getElementById("canvas").focus();
			$( "#canvas" ).keydown(function(e) {
				var mapping = {
					68 : 6, //lower right
					65 : 4, //lower left
					83 : 5, //down
					87 : 1, //upper left
					81 : 0, //up
					69 : 2 	//upper right
				}
				dir = mapping[e.which] || mapping[e.which]===0?mapping[e.which]:3;//default to 'stay' if other key pressed
				gameView.acceptUserInput({playerAvatarDirection: dir});
			});
			//Disable context menu on game
			document.oncontextmenu = function(){return false;}
		</script>
	</body>
</html>
